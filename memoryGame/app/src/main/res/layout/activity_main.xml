<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="194dp"
        android:layout_height="118dp"
        android:layout_marginBottom="424dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/konusma" />

    <TextView
        android:id="@+id/textViewquestion"
        android:layout_width="118dp"
        android:layout_height="44dp"
        android:foregroundGravity="center"
        android:text="5+3"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.346" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="475dp"
        android:alpha="0.75"
        android:background="@drawable/roundbutton"
        android:onClick="buttClicked"
        android:tag="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/para_barajsira" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="532dp"
        android:alpha="0.75"
        android:background="@drawable/roundbutton"
        android:onClick="buttClicked"
        android:tag="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/para_barajsira" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="594dp"
        android:alpha="0.75"
        android:background="@drawable/roundbutton"
        android:onClick="buttClicked"
        android:tag="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/para_barajsira" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="651dp"
        android:alpha="0.75"
        android:background="@drawable/roundbutton"
        android:onClick="buttClicked"
        android:tag="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/para_barajsira" />

    <TextView
        android:id="@+id/textViewbut1"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:elegantTextHeight="false"
        android:text="55"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.416" />

    <TextView
        android:id="@+id/textViewbut2"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:elegantTextHeight="false"
        android:text="55"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton2" />

    <TextView
        android:id="@+id/textViewbut3"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:elegantTextHeight="false"
        android:text="55"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
        app:layout_constraintEnd_toEndOf="@+id/imageButton3"
        app:layout_constraintStart_toStartOf="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="@+id/imageButton3" />

    <TextView
        android:id="@+id/textViewbut4"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:elegantTextHeight="false"
        android:text="55"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton4"
        app:layout_constraintEnd_toEndOf="@+id/imageButton4"
        app:layout_constraintStart_toStartOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="@+id/imageButton4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="106dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271"
        app:srcCompat="@drawable/saniye" />

    <TextView
        android:id="@+id/textViewtimer"
        android:layout_width="136dp"
        android:layout_height="55dp"
        android:text="1:00"
        android:textAlignment="center"
        android:textColor="#EAE7E7"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/scorebut"
        android:layout_width="220dp"
        android:layout_height="206dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#E4C709"
        android:fontFamily="@font/bungee_shade"
        android:text="Your Score                   7/8"
        android:textColor="#000000"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266" />

    <Button
        android:id="@+id/butexit"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#E80B0B"
        android:fontFamily="@font/bungee_shade"
        android:onClick="Exit"
        android:text="Exit"
        android:textColor="#000000"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.566" />

    <Button
        android:id="@+id/butplayagain"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#159506"
        android:fontFamily="@font/bungee_shade"
        android:onClick="playAgain"
        android:text="Play Again"
        android:textColor="#000000"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565" />


</androidx.constraintlayout.widget.ConstraintLayout>